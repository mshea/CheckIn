<!DOCTYPE html>
<html>
<head>
  <title>CheckIn</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
<% if user_signed_in? %>
	<p>Hello <%= current_user.email %>. Not you? <%= link_to "Sign out", destroy_user_session_path %> <%= current_user.id %></p>
<% else %>
	<p><Please <%= link_to "Sign up", new_user_registration_path %> or <%= link_to "sign in", new_user_session_path %>.</p>
<% end %>

<%= yield %>

</body>
</html>
